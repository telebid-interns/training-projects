doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='/stylesheets/table.css')
    script(type='text/javascript' src="/js/jquery.min.js")
    script(type='text/javascript' src='/js/jspdf.min.js')
  body
    block(id='content') content
  include ./navbar.jade
div(id='editor')
  table(style='width:45%' id='maint')
    tr
      th(align="left") â„–
      th Name
      th(align="right") Quantity
      th(align="right") Total
    each item in data.cart
        tr(id="row-#{item.id}")
          td #{item.number}
          td #{item.name}
          td(align="right") #{item.quantity}
          td(align="right") $#{parseFloat(Math.round((item.price * item.quantity) * 100) / 100).toFixed(2)}
    tr 
      td Total: 
      td
      td
      td(align="right", id="total", style="font-weight:bold") $#{data.total}
    form.form(method='post')
      tr
        td Actions
        td
          select(name='state')
              option(value='0') Awaiting Delivery
              option(value='1') Being Delivered
              option(value='2') Delivered
        td
          input(id='change' type='submit', name='buybtn', value='Change')
          
        td
          button(id='print' name='differentbuttton' type='button') Print


script.
  //make link with black bg
  $('#nav-pur').addClass('page');
  $('#print').click(()=>{
    var doc = new jsPDF();
    var specialElementHandlers = {
        '#editor': function (element, renderer) {
            return true;
      }
    };
    doc.fromHTML(
      $('#maint').html(), 
      15, 
      15, 
      {
          'width': 170,
          'elementHandlers': specialElementHandlers
      });
      // $.post('/addtocart', {id: id, quant: textBoxValue});
      //- $.post('/printpdf', {pdf:doc});
  });